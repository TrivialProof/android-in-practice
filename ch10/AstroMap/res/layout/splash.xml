<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/splashtext" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginBottom="10dp"
		android:layout_marginTop="20dp" android:gravity="center" android:text="@string/app_name" />
	<ImageView android:id="@+id/splashlogo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginBottom="10dp"
		android:layout_marginTop="10dp" android:gravity="center"
		android:src="@drawable/beer_icon_large" />
</RelativeLayout>
