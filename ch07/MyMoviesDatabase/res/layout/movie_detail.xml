<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal">

	<TextView android:id="@+id/movie_detail_name"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView android:id="@+id/movie_detail_year"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<ImageView android:id="@+id/movie_detail_image"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_margin="5dp" />

	<TextView android:id="@+id/movie_detail_tagline"
		android:layout_width="300dp" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView android:id="@+id/movie_detail_rating"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />

	<ListView android:id="@+id/movie_detail_category_list"
		android:layout_width="fill_parent" android:layout_height="0dp"
		android:layout_weight="1" android:cacheColorHint="#00000000"
		android:choiceMode="none" />

	<TextView android:id="@+id/movie_detail_category_list_empty"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="No categories" />
</LinearLayout>
